<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/about_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--
    TOOLBAR
    -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:background="@color/md_dark_appbar"
        android:windowActionBarOverlay="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--ABOUT APP-->
            <android.support.v7.widget.CardView
                android:id="@+id/about_app_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <!--ABOUT APP TITLE-->
                        <LinearLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/ll_about_app_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:weightSum="10"
                            >
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:padding="4dp"
                                android:src="@mipmap/ic_launcher"
                                />
                            <TextView
                                android:id="@+id/about_app_title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/md_dark_background"
                                android:text="@string/app_name"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:layout_weight="8"
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>

                    <!-- VERSION ABOUT APP-->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_about_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="8dp"
                        android:weightSum="10"
                        >
                        <com.mikepenz.iconics.view.IconicsImageView
                            android:id="@+id/about_version_icon"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            app:iiv_icon="gmd-info"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/about_version_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Version"
                                android:textColor="@color/md_dark_background"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:id="@+id/about_version_item_sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.0"
                                android:textColor="@color/md_grey_400"
                                android:textSize="14sp"
                                />
                            </LinearLayout>
                    </LinearLayout>

                    <!-- LICENSE LIBRARY -->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_about_libs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="15dp"
                        android:paddingTop="8dp"
                        android:weightSum="10"
                        >
                        <com.mikepenz.iconics.view.IconicsImageView
                            android:id="@+id/about_libs_icon"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            app:iiv_icon="gmd-info"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/about_libs_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/about_library_license"
                                android:textColor="@color/md_dark_background"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:id="@+id/about_libs_item_sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/about_library_license_sub"
                                android:textColor="@color/md_grey_400"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--ABOUT AUTOR-->
            <android.support.v7.widget.CardView
                android:id="@+id/about_authors_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="2dp"
                app:cardElevation="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/about_authors_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:text="@string/about_authors"
                        android:textColor="@color/md_dark_background"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                    <!--DONALD SHTJEFTNI -->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_donald"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:weightSum="10"
                        >
                        <com.mikepenz.iconics.view.IconicsImageView
                            android:id="@+id/about_author_donald_icon"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            app:iiv_icon="gmd-person"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/about_author_donald_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Donald Shtjefni"
                                android:textColor="@color/md_dark_background"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:id="@+id/about_author_donald_item_sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/about_author_donald_sub"
                                android:textColor="@color/md_grey_400"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <!-- DONALD SOCIAL LINK
                    ..
                    ..
                    ..
                    -->


                    <!--GILBERT NDRESAJ -->
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_gilbert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:weightSum="10"
                        >
                        <com.mikepenz.iconics.view.IconicsImageView
                            android:id="@+id/about_author_gilbert_icon"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            app:iiv_icon="gmd-person"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/about_author_gilbert_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gilbert Ndresaj"
                                android:textColor="@color/md_dark_background"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:id="@+id/about_author_gilbert_item_sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/about_author_gilbert_sub"
                                android:textColor="@color/md_grey_400"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <!-- GILBERT SOCIAL LINK
                    ..
                    ..
                    ..
                    -->


                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>