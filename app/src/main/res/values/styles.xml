    <!--LIGHT MENU THEME-->
    <style name="LightActionBarMenu" parent="Theme.AppCompat.Light">
        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu.Light</item>
    </style>

    <style name="MyApp.PopupMenu.Light" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/ic_empty_white</item>
    </style>

    <!--DARK MENU THEME-->
    <style name="DarkActionBarMenu" parent="Theme.AppCompat.Light">
        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu.Dark</item>
    </style>

    <style name="MyApp.PopupMenu.Dark" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/ic_empty</item>
    </style>


    <style name="AlertDialogDark" parent="Theme.AppCompat.Dialog">

    </style>
    <style name="AlertDialogLight" parent="Theme.AppCompat.Light.Dialog">

    </style>

    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/md_dark_appbar</item>
        <item name="android:elevation" tools:ignore="NewApi">5dp</item>
        <item name="theme">@style/MyToolbarTheme</item>

    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#FFF</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlHighlight">#FFF</item>
    </style>

    <style name="fab_camera">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="fab2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">50dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="fabAddFolder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">50dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--DIALOG THEME-->

    <style name="AlertDialog_Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/md_light_primary_icon</item><!--BOTTONI-->
        <item name="android:textColorPrimary">@color/md_light_primary_text</item><!--TESTO-->
        <item name="android:background">@color/cardview_light_background</item><!--SFONDO-->
    </style>

    <style name="AlertDialog_Dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/md_dark_primary_icon</item><!--BOTTONI-->
        <item name="android:textColorPrimary">@color/md_dark_primary_text</item><!--TESTO-->
        <item name="android:background">@color/cardview_dark_background</item><!--SFONDO-->
    </style>


    <!--PREFERENCE SCREEN-->
    <style name="PreferencesThemeDark">
        <item name="android:background">#2b2b2b</item>
    </style>
    <style name="PreferencesThemeLight">
        <item name="android:background">#FAFAFA</item>
        <!--<item name="android:background">#424242</item>-->
    </style>


    <!--Player-->
    <style name="RootTheme" parent="android:Theme.Holo">
    </style>

    <style name="PlayerTheme" parent="@style/RootTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="DemoButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40dp</item>
    </style>

</resources>
