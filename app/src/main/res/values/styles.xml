    <style name="AlertDialogDark" parent="Theme.AppCompat.Dialog">

    </style>
    <style name="AlertDialogLight" parent="Theme.AppCompat.Light.Dialog">

    </style>

    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/toolbar</item>
        <item name="android:elevation" tools:ignore="NewApi">5dp</item>
        <item name="theme">@style/MyToolbarTheme</item>

    </style>

    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#FFF</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlHighlight">#FFF</item>
    </style>

    <style name="fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:src">@mipmap/ic_photo_camera_white_24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="fab2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:src">@mipmap/ic_visibility_off_white_24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">50dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="fabAddFolder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">50dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--DIALOG THEME-->

    <style name="AlertDialog_Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/cp_AccentLight</item><!--BOTTONI-->
        <item name="android:textColorPrimary">@color/cp_TextLight</item><!--TESTO-->
        <item name="android:background">@color/cp_PrimaryLight</item><!--SFONDO-->
    </style>

    <style name="AlertDialog_Dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/cp_AccentDark</item><!--BOTTONI-->
        <item name="android:textColorPrimary">@color/cp_TextDark</item><!--TESTO-->
        <item name="android:background">@color/cp_PrimaryDark</item><!--SFONDO-->
    </style>


    <!--PREFERENCE SCREEN-->
    <style name="PreferencesThemeDark">
        <item name="android:background">#2b2b2b</item>
    </style>
    <style name="PreferencesThemeLight">

        <item name="android:background">#FAFAFA</item>
        <!--<item name="android:background">#424242</item>-->
    </style>
</resources>
